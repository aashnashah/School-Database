        //AskNameField is a nested class in the Button9Listener class. This is the class which is the actionListener for the askNameField text field
        private class AskNameField implements ActionListener
        {
            public void actionPerformed (ActionEvent event)
            {
                //A frame and panel are created
                JFrame frame = new JFrame ("Display Teacher Information");
                JPanel panel = new JPanel();
                panel.setBackground (Color.pink);
                panel.setPreferredSize (new Dimension (700, 200));

                String nameText = askNameField.getText();

                int counter = 0;

                //a while loop is used to go through the array List
                while (counter <= Teacher.tList1.size()-1)
                {
                    //An if else conditional is used to check if the name is equal to the name entered
                    if (Teacher.tList1.get(counter).getTName().equals(nameText))
                    {
                        String name = Teacher.tList1.get(counter).getTName();
                        int years = Teacher.tList1.get(counter).getYearsWorked();
                        String department = Teacher.tList1.get(counter).getDepartment();
                        String classTeach = Teacher.tList1.get(counter).getClasses();
                        int salary = Teacher.tList1.get(counter).getSalary();
                        String address = Teacher.tList1.get(counter).getTAddress();

                        // various lables are instantiated
                        JLabel label1 = new JLabel("Name: " + name);
                        JLabel label2 = new JLabel("Years Worked:  " + years);
                        JLabel label3 = new JLabel("Department: " + department);
                        JLabel label4 = new JLabel("Teaching Class: " + classTeach);
                        JLabel label5 = new JLabel("Salary: " + salary);
                        JLabel label6 = new JLabel ("Address: " + address);

                        // the labels and text fields are added to the panel
                        panel.add(label1);
                        panel.add(label2);
                        panel.add(label3);
                        panel.add(label4);
                        panel.add(label5);
                        panel.add(label6);

                        break;
                    }
                    else if (counter == Teacher.tList1.size()-1)
                    {

                        JLabel label7 = new JLabel("The teacher " + nameText + " has not been found");

                        panel.add(label7);
                    }
                    counter++;
                }
                panel.setLayout(new GridLayout(6,0));

                frame.getContentPane().add(panel);
                frame.setBackground (Color.pink);
                frame.setPreferredSize (new Dimension (700, 200));
                frame.pack();
                frame.setVisible(true);
            }
        }


    }
