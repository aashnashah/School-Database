    // Button3Listener is a nested class in the GUI class. This is the class which is the actionListener for the button 3
    private class Button3Listener implements ActionListener
    {
        //actionPerformed is the method that is called when the button 3 is clicked
        public void actionPerformed (ActionEvent event)
        {
            //A frame and panel are created
            JFrame frame = new JFrame ("Add Teacher");
            JPanel panel = new JPanel();
            panel.setBackground (Color.pink);
            panel.setPreferredSize (new Dimension (800, 200));

            name = new JTextField(15);
            yearsTaught = new JTextField(2);
            departmentTeach = new JTextField(10);
            classTaught = new JTextField(7);
            salary = new JTextField(7);
            address = new JTextField(50);


            address.addActionListener (new TeacherAddress());

            askName = new JLabel("Please enter the name of the teacher you want to add:");
            askYearsTaught = new JLabel ("Please enter the amount of years that this teacher has taught:");
            askDepartmentTeach = new JLabel("Please enter the department this teacher is in");
            askClassTaught = new JLabel("Please enter the code for the class this teacher teaches");
            askSalary = new JLabel("Please enter this teacher's salary:");
            askAddress = new JLabel("Please enter this teacher's address:");

            // the labels and text fields are added to the panel
            panel.add(askName);
            panel.add(name);
            panel.add(askYearsTaught);
            panel.add(yearsTaught);
            panel.add(askDepartmentTeach);
            panel.add(departmentTeach);
            panel.add(askClassTaught);
            panel.add(classTaught);
            panel.add(askSalary);
            panel.add(salary);
            panel.add(askAddress);
            panel.add(address);

            panel.setLayout(new GridLayout(6,0));

            frame.getContentPane().add(panel);

            setBackground (Color.pink);
            setPreferredSize (new Dimension (800, 200));
            frame.pack();
            frame.setVisible(true);
        }

        //------------------------------------------------------------------------------------------
        //TeacherAddress is a nested class in the Button3Listener class. This is the class which is the actionListener for the teacher address text field
        public class TeacherAddress implements ActionListener
        {
            public void actionPerformed (ActionEvent event)
            {
                Teacher t = new Teacher(name.getText(), Integer.parseInt(yearsTaught.getText()), departmentTeach.getText(), classTaught.getText(),
                        Integer.parseInt(salary.getText()), address.getText());


                Teacher.tList1.add(t);

                //A frame and panel are created
                JFrame frame = new JFrame ("Teacher Added");


                JPanel panel = new JPanel();
                panel.setBackground (Color.pink);
                panel.setPreferredSize (new Dimension (300, 300));

                JLabel label1 = new JLabel ("The following teacher has been added:");

                JLabel label2 = new JLabel ("Name: " + name.getText());
                JLabel label3 = new JLabel ("Years Taught: " + Integer.parseInt(yearsTaught.getText()));
                JLabel label4 = new JLabel (" Department: " + departmentTeach.getText());
                JLabel label5 = new JLabel (" Teaches class: " + classTaught.getText());
                JLabel label6 = new JLabel (" Salary: " + salary.getText());
                JLabel label7 = new JLabel (" Address: " + address.getText());

                // the labels and text fields are added to the panel
                panel.add(label1);
                panel.add(label2);
                panel.add(label3);
                panel.add(label4);
                panel.add(label5);
                panel.add(label6);
                panel.add(label7);

                panel.setLayout(new GridLayout(7,0));

                frame.getContentPane().add(panel);
                frame.setBackground (Color.pink);
                frame.setPreferredSize (new Dimension (300, 300));
                frame.pack();
                frame.setVisible(true);

            }
        }
    }
