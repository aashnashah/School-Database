        //------------------------------------------------------------------------------------
        //TermAbstract is a nested class in the Button7Listener class. This is the class which is the actionListener for the termAbstract text field
        private class TermAbstract implements ActionListener
        {
            public void actionPerformed (ActionEvent event)
            {
//A frame and panel are created
                JFrame frame = new JFrame ("Student Grade Updated");
                JPanel panel = new JPanel();
                panel.setBackground (Color.pink);
                panel.setPreferredSize (new Dimension (500, 700));

                String nameText = askNameField.getText();
                String classText = askClassField.getText();

                int one =   Integer.parseInt(askTest1.getText());
                int two =     Integer.parseInt(askTest2.getText());
                int three =     Integer.parseInt(askTest3.getText());
                int four =     Integer.parseInt(askTest4.getText());
                int five = Integer.parseInt(askFinalTest.getText());
                int six=     Integer.parseInt(askHwCl.getText());
                int seven =     Integer.parseInt(askProject1.getText());
                int eight =     Integer.parseInt(askProject2.getText());
                int nine =     Integer.parseInt(askProject3.getText());
                int ten =     Integer.parseInt(askProject4.getText());
                int eleven =    Integer.parseInt(askProject5.getText());
                int twelve =    Integer.parseInt(askTermProject.getText());
                int thirteen =   Integer.parseInt(askTermAbstract.getText());



                int counter = 0;

                //a while loop is used to go through the array List
                while (counter <= Student.studList1.size()-1)
                {
//An if else conditional is used to check if the name is equal to the name entered

                    if (Student.studList1.get(counter).getStudName().equals(nameText))
                    {
                        //Various if else conditonals are used to select which Paraadigm for calculating grade is to be used
                        if(seven == 0 && eight == 0 && nine == 0 && ten == 0 && eleven == 0 && twelve == 0 && thirteen == 0)
                        {
                            int index = Student.studList1.get(counter).program.indexOf(classText);

                            int newGrade = Student.studList1.get(counter).calculateGrade(one, two, three, four, five, six);

                            int oldGrade = Student.studList1.get(counter).reportCard.get(index);

                            Student.studList1.get(counter).reportCard.set(index, newGrade);

                            JLabel gradeDone = new JLabel(nameText + "'s grade for class " + classText + " has been updated from " + oldGrade + " to " +
                                    Student.studList1.get(counter).reportCard.get(index));
                            panel.add(gradeDone);
                        }
                        else if (four == 0 && nine == 0 && ten == 0 && eleven == 0 && twelve == 0 && thirteen == 0)
                        {
                            int index = Student.studList1.get(counter).program.indexOf(classText);

                            int newGrade = Student.studList1.get(counter).calculateGrade(one, two, three, five, seven, eight, six);

                            int oldGrade = Student.studList1.get(counter).reportCard.get(index);

                            Student.studList1.get(counter).reportCard.set(index, newGrade);

                            JLabel gradeDone = new JLabel(nameText + "'s grade for class " + classText + " has been updated from " + oldGrade + " to " +
                                    Student.studList1.get(counter).reportCard.get(index));
                            panel.add(gradeDone);
                        }
                        else if(one == 0 && two == 0 &&  three == 0 &&  four == 0 &&  five == 0)
                        {
                            int index = Student.studList1.get(counter).program.indexOf(classText);

                            int newGrade = Student.studList1.get(counter).calculateGrade(seven, eight, nine, ten, eleven, thirteen, twelve, six);

                            int oldGrade = Student.studList1.get(counter).reportCard.get(index);

                            Student.studList1.get(counter).reportCard.set(index, newGrade);

                            JLabel gradeDone = new JLabel(nameText + "'s grade for class " + classText + " has been updated from " + oldGrade + " to " +
                                    Student.studList1.get(counter).reportCard.get(index));
                            panel.add(gradeDone);
                        }

                        break;
                    }

                    else if (counter == Student.studList1.size()-1)
                    {

                        JLabel label7 = new JLabel("The student " + nameText + " has not been found");

                        panel.add(label7);
                    }
                    counter++;
                }


                panel.setLayout(new GridLayout(26,0));

                frame.getContentPane().add(panel);
                frame.setBackground (Color.pink);
                frame.setPreferredSize (new Dimension (500, 700));
                frame.pack();
                frame.setVisible(true);
            }
        }
    }
