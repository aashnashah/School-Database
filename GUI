    //This is the constructor GUI, which the PDriver class uses to create the initial button
    public GUI(String run)
    {
        //A panel is created, the color and size are set
        JPanel panel = new JPanel();
        panel.setBackground (Color.pink);
        panel.setPreferredSize (new Dimension (900, 400));

        //A label is instantiated
        label = new JLabel ("Please click on the action you want to do ");

        //The various buttons are instantiated
        button1 = new JButton ("Add a student");
        button2 = new JButton ("Delete a student");
        button3 = new JButton ("Add a teacher");
        button4 = new JButton ("Delete a teacher");
        button5 = new JButton ("Add a class to a student's program");
        button6 = new JButton ("Delete a class from a student's program");
        button7 = new JButton ("Update a student's grade");
        button8 = new JButton ("View information on a student");
        button9 = new JButton ("View information on a teacher");
        button10 = new JButton ("View information on a class");
        button11 = new JButton ("View a student's report card");

        //the buttons are added to the panel
        panel.add(button1);
        panel.add(button2);
        panel.add(button3);
        panel.add(button4);
        panel.add(button5);
        panel.add(button6);
        panel.add(button7);
        panel.add(button8);
        panel.add(button9);
        panel.add(button10);
        panel.add(button11);

        panel.setLayout(new GridLayout(4, 6));

        add(label);
        add(panel);

        setBackground (Color.pink);
        setPreferredSize (new Dimension (900, 500));

        //ActionListeners are added to the various buttons
        button1.addActionListener (new Button1Listener());
        button2.addActionListener (new Button2Listener());
        button3.addActionListener (new Button3Listener());
        button4.addActionListener (new Button4Listener());
        button5.addActionListener (new Button5Listener());
        button6.addActionListener (new Button6Listener());
        button7.addActionListener (new Button7Listener());
        button8.addActionListener (new Button8Listener());
        button9.addActionListener (new Button9Listener());
        button10.addActionListener (new Button10Listener());
        button11.addActionListener (new Button11Listener());

    }
    //===================================================================================================================================================
    // Button1Listener is a nested class in the GUI class. This is the class which is the actionListener for the button 1
    public class Button1Listener implements ActionListener
    {
        //actionPerformed is the method that is called when the button 1 is clicked
        public void actionPerformed (ActionEvent event)
        {
            //A frame and panel are created
            JFrame frame = new JFrame ("Add Student");
            JPanel panel = new JPanel();
            panel.setBackground (Color.pink);
            panel.setPreferredSize (new Dimension (900, 250));

            //various textFields are instantiated
            name = new JTextField(15);
            osis = new JTextField(9);
            cuts = new JTextField(3);
            year = new JTextField(2);
            math = new JTextField(7);
            english = new JTextField(7);
            history = new JTextField(7);
            physics = new JTextField(7);
            spanish  = new JTextField(7);
            address = new JTextField(50);

            //An action listner is added to address, which is the last textField
            address.addActionListener (new Address());

            //various JLabels are instantiated
            askName = new JLabel("Please enter the name of the student you want to add:");
            askOsis = new JLabel ("Please enter the Osis number of the student you want to add:");
            askCuts = new JLabel("Please enter the number of cuts the student currently has:");
            askYear = new JLabel("Please enter the year that the student is currently in:");
            askMath = new JLabel("Please the code for the student's math class:");
            askEnglish = new JLabel("Please  enter the code for the student's english class:");
            askHistory = new JLabel("Please enter the code for the student's history class:");
            askPhysics = new JLabel("Please enter the code for the student's physics class:");
            askSpanish = new JLabel("Please enter the code for the student's spanish class:");
            askAddress = new JLabel("Please enter the address of the student you want to add:");

            // the labels and text fields are added to the panel
            panel.add(askName);
            panel.add(name);
            panel.add(askOsis);
            panel.add(osis);
            panel.add(askCuts);
            panel.add(cuts);
            panel.add(askYear);
            panel.add(year);
            panel.add(askMath);
            panel.add(math);
            panel.add(askEnglish);
            panel.add(english);
            panel.add(askHistory);
            panel.add(history);
            panel.add(askPhysics);
            panel.add(physics);
            panel.add(askSpanish);
            panel.add(spanish);
            panel.add(askAddress);
            panel.add(address);

            panel.setLayout(new GridLayout(10,0));

            frame.getContentPane().add(panel);

            setBackground (Color.pink);
            setPreferredSize (new Dimension (900, 250));
            frame.pack();
            frame.setVisible(true);
        }

        //------------------------------------------------------------------------------------------
        //Address is a nested class in the Button1Listener class. This is the class which is the actionListener for the address text field
        public class Address implements ActionListener
        {
            //actionPerformed is the method that is called when the information is added in the address text field
            public void actionPerformed (ActionEvent event)
            {
                //the image, which is needed for creating student is declared and instantiated
                ImageIcon  icon = new ImageIcon("noImage.jpg");

                //Using the information that the user enter, a student is created
                Student s = new Student(name.getText(), Integer.parseInt(osis.getText()), Integer.parseInt(cuts.getText()),
                        Integer.parseInt(year.getText()),address.getText(), icon);

                //the student is added to the array list
                Student.studList1.add(s);

                // the frame, panel and labels are created. The labels are then added to the panel which is then added to the frame
                JFrame frame = new JFrame ("Student Added");

                JPanel subPanel = new JPanel();
                subPanel.setBackground (Color.pink);
                subPanel.setPreferredSize (new Dimension (700, 300));


                JPanel panelFinal = new JPanel();
                panelFinal.setBackground (Color.pink);
                panelFinal.setPreferredSize (new Dimension (700, 800));


                JPanel panel = new JPanel();
                panel.setBackground (Color.pink);
                panel.setPreferredSize (new Dimension (700, 400));

                JLabel label1 = new JLabel ("The following student has been added:");

                JLabel label2 = new JLabel ("Name: " + name.getText());
                JLabel label3 = new JLabel ("Osis Number: " + Integer.parseInt(osis.getText()));
                JLabel label4 = new JLabel (" Year: " + Integer.parseInt(year.getText()));
                JLabel label5 = new JLabel (" Number of Cuts: " + Integer.parseInt(cuts.getText()));
                JLabel label6 = new JLabel (" Classes: " + math.getText() +", "+ english.getText() +", "+ history.getText() +", "+
                        physics.getText() +", "+ spanish.getText());
                JLabel label7 = new JLabel (" Address: " + address.getText());
                JLabel label8 = new JLabel ("Student I.D.:", icon, SwingConstants.CENTER);
                label8.setHorizontalTextPosition (SwingConstants.CENTER);
                label8.setVerticalTextPosition (SwingConstants.TOP);

                // the labels are added to the panel
                panel.add(label1);
                panel.add(label2);
                panel.add(label3);
                panel.add(label4);
                panel.add(label5);
                panel.add(label6);
                panel.add(label7);

                subPanel.add(label8);

                panel.setLayout(new GridLayout(7,0));

                panelFinal.add(panel);
                panelFinal.add(subPanel);

                frame.getContentPane().add(panelFinal);
                frame.setBackground (Color.pink);
                frame.setPreferredSize (new Dimension (700, 800));
                frame.pack();
                frame.setVisible(true);

            }
        }
    }
    //====================================================================================================================================================
    // Button2Listener is a nested class in the GUI class. This is the class which is the actionListener for the button 2
    private class Button2Listener implements ActionListener
    {
        //actionPerformed is the method that is called when the button 2 is clicked
        public void actionPerformed (ActionEvent event)
        {
            JFrame frame = new JFrame ("Delete Student");
            JPanel panel = new JPanel();
            panel.setBackground (Color.pink);
            panel.setPreferredSize (new Dimension (700, 200));

            name = new JTextField(15);

            name.addActionListener (new Name());

            askName = new JLabel("Please enter the name of the student you want to delete:");

            // the labels and text fields are added to the panel
            panel.add(askName);
            panel.add(name);

            frame.add(panel);

            frame.setBackground (Color.pink);
            frame.setPreferredSize (new Dimension (700, 300));
            frame.pack();
            frame.setVisible(true);
        }
        //------------------------------------------------------------------------------------
        //Name is a nested class in the Button2Listener class. This is the class which is the actionListener for the name text field
        private class Name implements ActionListener
        {
            public void actionPerformed (ActionEvent event)
            {
                //A frame and panel are created
                JFrame frame = new JFrame ("Deleted Student");
                JPanel panel = new JPanel();
                panel.setBackground (Color.pink);
                panel.setPreferredSize (new Dimension (700, 200));

                String nameText = name.getText();

                int counter = 0;

                //a while loop is used to go through the array List
                while (counter < Student.studList1.size())
                {
                    //An if else conditional is used to check if the name is equal to the name entered
                    if (Student.studList1.get(counter).getStudName().equals(nameText))
                    {
                        Student.studList1.remove(counter);

                        labelable = new JLabel ("The student " + nameText + " has been found and deleted");

                        break;
                    }
                    else
                    {
                        labelable = new JLabel ("The student " + nameText + " has not been found");
                        counter++;
                    }
                }

                // the label are added to the panel
                panel.add(labelable);

                frame.getContentPane().add(panel);
                frame.setBackground (Color.pink);
                frame.setPreferredSize (new Dimension (700, 300));
                frame.pack();
                frame.setVisible(true);
            }
        }
    }
