    // Button10Listener is a nested class in the GUI class. This is the class which is the actionListener for the button 10
    private class Button10Listener implements ActionListener
    {
        //actionPerformed is the method that is called when the button 10 is clicked
        public void actionPerformed (ActionEvent event)
        {
            //A frame and panel are created
            JFrame frame = new JFrame ("Get Class Information");
            JPanel panel = new JPanel();
            panel.setBackground (Color.pink);
            panel.setPreferredSize (new Dimension (700, 200));

            // various text fields and lables are instantiated
            askClassField = new JTextField(15);
            askClass = new JLabel("Please enter the section of the class you want information on");

            askClassField.addActionListener (new AskClassField());

            // the labels and text fields are added to the panel
            panel.add(askClass);
            panel.add(askClassField);

            frame.getContentPane().add(panel);
            frame.setBackground (Color.pink);
            frame.setPreferredSize (new Dimension (700, 200));
            frame.pack();
            frame.setVisible(true);
        }
        //------------------------------------------------------------------------------------
        //AskClassField is a nested class in the Button10Listener class. This is the class which is the actionListener for the askClassField text field
        private class AskClassField implements ActionListener
        {
            public void actionPerformed (ActionEvent event)
            {
                //A frame and panel are created
                JFrame frame = new JFrame ("Display Class Information");
                JPanel panel = new JPanel();
                panel.setBackground (Color.pink);
                panel.setPreferredSize (new Dimension (500, 700));

                String classText = askClassField.getText();

                int counter = 0;

                while (counter <= AcademicClass.cList1.size()-1)
                {
                    //An if else conditional is used to check if the section is equal to the section entered
                    if (AcademicClass.cList1.get(counter).getSection().equals(classText))
                    {

                        String teacher = AcademicClass.cList1.get(counter).getTeacherName();
                        String subject = AcademicClass.cList1.get(counter).getSubject();
                        String section = AcademicClass.cList1.get(counter).getSection();
                        int period = AcademicClass.cList1.get(counter).getPeriod();
                        int numKids = AcademicClass.cList1.get(counter).getNumKids();

                        // various lables are instantiated
                        JLabel label1 = new JLabel("Teacher: " + teacher);
                        JLabel label2 = new JLabel("Subject:  " + subject);
                        JLabel label3 = new JLabel("Section: " + section);
                        JLabel label4 = new JLabel("Period: " + period);
                        JLabel label5 = new JLabel("Number of Students: " + numKids);

                        JLabel label6 = new JLabel("Roster:");

                        // the labels are added to the panel
                        panel.add(label1);
                        panel.add(label2);
                        panel.add(label3);
                        panel.add(label4);
                        panel.add(label5);
                        panel.add(label6);

                        int count = 0;

                        //a while loop is used to go through the array List
                        while (count < Student.studList1.size())
                        {

                            String studName = Student.studList1.get(count).getStudName();
                            int osisNum = Student.studList1.get(count).getOsisNum();

                            JLabel label7 = new JLabel(studName + "(" + osisNum + ")");
                            panel.add(label7);

                            count++;
                        }
                        break;
                    }
                    else if (counter == AcademicClass.cList1.size()-1)
                    {

                        JLabel label7 = new JLabel("The Class " + classText + " has not been found");

                        panel.add(label7);
                    }
                    counter++;
                }

                panel.setLayout(new GridLayout(26,0));

                frame.getContentPane().add(panel);
                frame.setBackground (Color.pink);
                frame.setPreferredSize (new Dimension (500, 700));
                frame.pack();
                frame.setVisible(true);
            }
        }
    }
