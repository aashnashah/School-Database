    // Button7Listener is a nested class in the GUI class. This is the class which is the actionListener for the button 7
    private class Button7Listener implements ActionListener
    {
        //actionPerformed is the method that is called when the button 7 is clicked
        public void actionPerformed (ActionEvent event)
        {
            //A frame and panel are created
            JFrame frame = new JFrame ("Update Student Grade");
            JPanel panelF = new JPanel();
            panelF.setBackground (Color.pink);
            panelF.setPreferredSize (new Dimension (1000, 600));

            JPanel panel = new JPanel();
            panel.setBackground (Color.pink);
            panel.setPreferredSize (new Dimension (1000, 500));

            JPanel subPanel = new JPanel();
            subPanel.setBackground (Color.pink);
            subPanel.setPreferredSize (new Dimension (1000, 50));


            // various text fields and lables are instantiated
            askNameField = new JTextField(15);
            askClassField = new JTextField(7);
            askTest1 = new JTextField(2);
            askTest2 = new JTextField(2);
            askTest3 = new JTextField(2);
            askTest4 = new JTextField(2);
            askFinalTest = new JTextField(2);
            askHwCl = new JTextField(2);
            askProject1 = new JTextField(2);
            askProject2 = new JTextField(2);
            askProject3 = new JTextField(2);
            askProject4 = new JTextField(2);
            askProject5 = new JTextField(2);
            askTermProject = new JTextField(2);
            askTermAbstract = new JTextField(2);

