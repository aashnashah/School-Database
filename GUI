            // the labels and text fields are added to the panel
            panel.add(askName);
            panel.add(askNameField);

            frame.getContentPane().add(panel);
            frame.setBackground (Color.pink);
            frame.setPreferredSize (new Dimension (700, 200));
            frame.pack();
            frame.setVisible(true);
        }
        //------------------------------------------------------------------------------------
        //AskNameField is a nested class in the Button11Listener class. This is the class which is the actionListener for the askNameField text field
        private class AskNameField implements ActionListener
        {
            public void actionPerformed (ActionEvent event)
            {
//A frame and panel are created
                JFrame frame = new JFrame ("Display Student Report Card");
                JPanel panel = new JPanel();
                panel.setBackground (Color.pink);
                panel.setPreferredSize (new Dimension (500, 700));

                String nameText = askNameField.getText();

                int counter = 0;

                //a while loop is used to go through the array List
                while (counter <= Student.studList1.size()-1)
                {
                    //An if else conditional is used to check if the name is equal to the name entered
                    if (Student.studList1.get(counter).getStudName().equals(nameText))
                    {
                        JLabel b = new JLabel(nameText + "'s Report Card:");
                        JLabel bo = new JLabel("");

                        panel.add(b);
                        panel.add(bo);

                        int count = 0;
                        while(count < 5)
                        {
                            // various  lables are instantiated
                            JLabel label1 = new JLabel("Class: " + Student.studList1.get(counter).program.get(count));
                            JLabel label2 = new JLabel("Teacher: " +  AcademicClass.cList1.get(count).getTeacherName());
                            JLabel label3 = new JLabel("Grade: " + Integer.toString(Student.studList1.get(counter).reportCard.get(count)));
                            JLabel b1 = new JLabel("");

                            // the labels and text fields are added to the panel
                            panel.add(label1);
                            panel.add(label2);
                            panel.add(label3);
                            panel.add(b1);

                            count++;
                        }
                        break;

                    }
                    else if (counter == Student.studList1.size()-1)
                    {

                        JLabel label7 = new JLabel("The student " + nameText + " has not been found");

                        panel.add(label7);
                    }
                    counter++;
                }


                panel.setLayout(new GridLayout(26,0));

                frame.getContentPane().add(panel);
                frame.setBackground (Color.pink);
                frame.setPreferredSize (new Dimension (500, 700));
                frame.pack();
                frame.setVisible(true);
            }
        }
    }
