            askProject2L = new JLabel("Project2: ");
            askProject3L = new JLabel("Project3");
            askProject4L = new JLabel("Project4");
            askProject5L = new JLabel("Project5");
            askTermProjectL = new JLabel("Term Project: ");
            askTermAbstractL = new JLabel("Term Project Abstract: ");

            subPanel.add(askFill);

            // the labels and text fields are added to the panel
            panel.add(askName);
