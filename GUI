    // Button5Listener is a nested class in the GUI class. This is the class which is the actionListener for the button 5
    private class Button5Listener implements ActionListener
    {
        //actionPerformed is the method that is called when the button 5 is clicked
        public void actionPerformed (ActionEvent event)
        {
            //A frame and panel are created
            JFrame frame = new JFrame ("Add Class");
            JPanel panel = new JPanel();
            panel.setBackground (Color.pink);
            panel.setPreferredSize (new Dimension (950, 200));

            name = new JTextField(15);
            addClass = new JTextField(10);

            addClass.addActionListener (new AddClass());

            askName = new JLabel("Please enter the name of the student whose program you want to add this class to");
            askClass = new JLabel("Please enter the code of class you want to add");

            // the labels and text fields are added to the panel
            panel.add(askName);
            panel.add(name);
            panel.add(askClass);
            panel.add(addClass);


            frame.add(panel);

            frame.setBackground (Color.pink);
            frame.setPreferredSize (new Dimension (950, 300));
            frame.pack();
            frame.setVisible(true);
        }

        //------------------------------------------------------------------------------------
        //AddClass is a nested class in the Button5Listener class. This is the class which is the actionListener for the addClass text field
        private class AddClass implements ActionListener
        {
            public void actionPerformed (ActionEvent event)
            {
                //A frame and panel are created
                JFrame frame = new JFrame ("Class Added");
                JPanel panel = new JPanel();
                panel.setBackground (Color.pink);
                panel.setPreferredSize (new Dimension (700, 200));

                String nameText = name.getText();

                String classText = addClass.getText();

                int counter = 0;

                //a while loop is used to go through the array List
                while (counter < Student.studList1.size())
                {
                    //An if else conditional is used to check if the name is equal to the name entered
                    if (Student.studList1.get(counter).getStudName().equals(nameText))
                    {
                        Student.studList1.get(counter).program.add(classText);

                        labelable = new JLabel ("The class " + classText + " has been added to the program of " + nameText);

                        break;
                    }
                    else
                    {
                        counter++;
                    }
                }

                // the labels are added to the panel
                panel.add(labelable);

                frame.getContentPane().add(panel);
                frame.setBackground (Color.pink);
                frame.setPreferredSize (new Dimension (700, 300));
                frame.pack();
                frame.setVisible(true);
            }
        }
    }

    //====================================================================================================================================================
    // Button6Listener is a nested class in the GUI class. This is the class which is the actionListener for the button 6
    private class Button6Listener implements ActionListener
    {
        //actionPerformed is the method that is called when the button 6 is clicked
        public void actionPerformed (ActionEvent event)
        {
            //A frame and panel are created
            JFrame frame = new JFrame ("Delete Class");
            JPanel panel = new JPanel();
            panel.setBackground (Color.pink);
            panel.setPreferredSize (new Dimension (950, 200));

            name = new JTextField(15);
            deleteClass = new JTextField(10);

            deleteClass.addActionListener (new DeleteClass());

            askName = new JLabel("Please enter the name of the student");
            askClass = new JLabel("Please enter the code of class you want to delete");

            // the labels and text fields are added to the panel
            panel.add(askName);
            panel.add(name);
            panel.add(askClass);
            panel.add(deleteClass);


            frame.add(panel);

            frame.setBackground (Color.pink);
            frame.setPreferredSize (new Dimension (950, 300));
            frame.pack();
            frame.setVisible(true);
        }
        //------------------------------------------------------------------------------------
        //DeleteClass is a nested class in the Button6Listener class. This is the class which is the actionListener for the deleteClass text field
        private class DeleteClass implements ActionListener
        {
            public void actionPerformed (ActionEvent event)
            {
                //A frame and panel are created
                JFrame frame = new JFrame ("Class Deleted");
                JPanel panel = new JPanel();
                panel.setBackground (Color.pink);
                panel.setPreferredSize (new Dimension (700, 200));

                String nameText = name.getText();

                String classText = deleteClass.getText();

                int counter = 0;

                //a while loop is used to go through the array List
                while (counter < Student.studList1.size())
                {
                    //An if else conditional is used to check if the name is equal to the name entered
                    if (Student.studList1.get(counter).getStudName().equals(nameText))
                    {
                        Student.studList1.get(counter).program.remove(classText);

                        labelable = new JLabel ("The class " + classText + " has been deleted from the program of " + nameText);

                        break;
                    }
                    else
                    {
                        counter++;
                        labelable = new JLabel ("The class " + classText + " has not been found");
                    }
                }

                panel.add(labelable);

                frame.getContentPane().add(panel);
                frame.setBackground (Color.pink);
                frame.setPreferredSize (new Dimension (700, 300));
                frame.pack();
                frame.setVisible(true);
            }
        }
    }
