    // Button8Listener is a nested class in the GUI class. This is the class which is the actionListener for the button 8
    private class Button8Listener implements ActionListener
    {
        //actionPerformed is the method that is called when the button 8 is clicked
        public void actionPerformed (ActionEvent event)
        {
            //A frame and panel are created
            JFrame frame = new JFrame ("Get Student Information");
            JPanel panel = new JPanel();
            panel.setBackground (Color.pink);
            panel.setPreferredSize (new Dimension (700, 200));


            // various text fields and lables are instantiated
            askNameField = new JTextField(15);
            askName = new JLabel("Please enter the name of the student you want information on");

            askNameField.addActionListener (new AskNameField());

            // the labels and text fields are added to the panel
            panel.add(askName);
            panel.add(askNameField);

            frame.getContentPane().add(panel);
            frame.setBackground (Color.pink);
            frame.setPreferredSize (new Dimension (700, 200));
            frame.pack();
            frame.setVisible(true);
        }
        //------------------------------------------------------------------------------------
        //AskNameField is a nested class in the Button8Listener class. This is the class which is the actionListener for the askNameField text field
        private class AskNameField implements ActionListener
        {
            public void actionPerformed (ActionEvent event)
            {
                //A frame and panel are created
                JFrame frame = new JFrame ("Display Student Information");
                JPanel panelFinal = new JPanel();
                panelFinal.setBackground (Color.pink);
                panelFinal.setPreferredSize (new Dimension (700, 800));


                JPanel panel = new JPanel();
                panel.setBackground (Color.pink);
                panel.setPreferredSize (new Dimension (700, 400));

                JPanel subPanel = new JPanel();
                subPanel.setBackground (Color.pink);
                subPanel.setPreferredSize (new Dimension (700, 400));

                String nameText = askNameField.getText();

                int counter = 0;

                //a while loop is used to go through the array List
                while (counter <= Student.studList1.size()-1)
                {
                    //An if else conditional is used to check if the name is equal to the name entered
                    if (Student.studList1.get(counter).getStudName().equals(nameText))
                    {

                        String name = Student.studList1.get(counter).getStudName();
                        int osis = Student.studList1.get(counter).getOsisNum();
                        int cuts = Student.studList1.get(counter).getNumCuts();
                        int year = Student.studList1.get(counter).getYear();
                        String address = Student.studList1.get(counter).getAddress();
                        ImageIcon picture = Student.studList1.get(counter).getPicture();

                        // various and lables are instantiated
                        label1 = new JLabel("Name: " + name);
                        label2 = new JLabel("Osis Number:  " + osis);
                        label3 = new JLabel("Number of Cuts: " + cuts);
                        label4 = new JLabel("Current Year: " + year);
                        label5 = new JLabel("Address: " + address);

                        label6 = new JLabel("Image I.D.: ", picture , SwingConstants.CENTER);
                        label6.setHorizontalTextPosition (SwingConstants.CENTER);
                        label6.setVerticalTextPosition (SwingConstants.TOP);

                        // the labels and text fields are added to the panel
                        panel.add(label1);
                        panel.add(label2);
                        panel.add(label3);
                        panel.add(label4);
                        panel.add(label5);

                        subPanel.add(label6);

                        break;
                    }
                    else if (counter == Student.studList1.size()-1)
                    {

                        JLabel label7 = new JLabel("The student " + nameText + " has not been found");

                        panel.add(label7);
                    }
                    counter++;
                }

                panel.setLayout(new GridLayout(5,0));

                panelFinal.add(panel);
                panelFinal.add(subPanel);

                frame.getContentPane().add(panelFinal);
                frame.setBackground (Color.pink);
                frame.setPreferredSize (new Dimension (700, 800));
                frame.pack();
                frame.setVisible(true);
            }
        }
    }
